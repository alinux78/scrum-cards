<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mihai.scrumcards.MainActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/btn_0"
                android:layout_width="88dp"
                android:layout_height="109dp"
                android:onClick="onCardClick"
                android:text="0"
                android:textSize="36sp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="16dp" />

            <Button
                android:id="@+id/btn_0.5"
                android:layout_width="88dp"
                android:layout_height="109dp"
                android:onClick="onCardClick"
                android:text="1/2"
                android:textSize="36sp"
                tools:layout_editor_absoluteX="116dp"
                tools:layout_editor_absoluteY="16dp" />

            <Button
                android:id="@+id/btn_1"
                android:layout_width="88dp"
                android:layout_height="109dp"
                android:onClick="onCardClick"
                android:text="1"
                android:textSize="36sp"
                tools:layout_editor_absoluteX="217dp"
                tools:layout_editor_absoluteY="16dp" />

            <Button
                android:id="@+id/btn_2"
                android:layout_width="88dp"
                android:layout_height="109dp"
                android:onClick="onCardClick"
                android:text="2"
                android:textSize="36sp"
                tools:layout_editor_absoluteX="322dp"
                tools:layout_editor_absoluteY="16dp" />

            <Button
                android:id="@+id/btn_3"
                android:layout_width="88dp"
                android:layout_height="109dp"
                android:onClick="onCardClick"
                android:text="3"
                android:textSize="36sp"
                tools:layout_editor_absoluteX="432dp"
                tools:layout_editor_absoluteY="16dp" />

            <Button
                android:id="@+id/btn_5"
                android:layout_width="88dp"
                android:layout_height="109dp"
                android:onClick="onCardClick"
                android:text="5"
                android:textSize="36sp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="138dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/btn_8"
                android:layout_width="88dp"
                android:layout_height="109dp"
                android:onClick="onCardClick"
                android:text="8"
                android:textSize="36sp"
                tools:layout_editor_absoluteX="127dp"
                tools:layout_editor_absoluteY="138dp" />

            <Button
                android:id="@+id/btn_13"
                android:layout_width="88dp"
                android:layout_height="109dp"
                android:onClick="onCardClick"
                android:text="13"
                android:textSize="36sp"
                tools:layout_editor_absoluteX="225dp"
                tools:layout_editor_absoluteY="138dp" />

            <Button
                android:id="@+id/btn_21"
                android:layout_width="88dp"
                android:layout_height="109dp"
                android:onClick="onCardClick"
                android:text="21"
                android:textSize="36sp"
                tools:layout_editor_absoluteX="322dp"
                tools:layout_editor_absoluteY="138dp" />

            <Button
                android:id="@+id/btn_34"
                android:layout_width="88dp"
                android:layout_height="109dp"
                android:onClick="onCardClick"
                android:text="34"
                android:textSize="36sp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="396dp" />

            <Button
                android:id="@+id/btn_100"
                android:layout_width="88dp"
                android:layout_height="109dp"
                android:onClick="onCardClick"
                android:text="100"
                android:textSize="36sp"
                tools:layout_editor_absoluteX="116dp"
                tools:layout_editor_absoluteY="396dp" />

            <Button
                android:id="@+id/btn_question"
                android:layout_width="88dp"
                android:layout_height="109dp"
                android:onClick="onCardClick"
                android:text="?"
                android:textSize="36sp"
                tools:layout_editor_absoluteX="217dp"
                tools:layout_editor_absoluteY="396dp" />
        </TableRow>
    </TableLayout>

</android.support.constraint.ConstraintLayout>
